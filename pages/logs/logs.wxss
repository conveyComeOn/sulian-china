.log-list {
  display: flex;
  flex-direction: column;
 
}
.container{
  height: 100%;
	width: 100%;
	position: fixed;
	top: 0;
	left: 0;
 background-color: rgb(245, 246, 246);
}

/*//中心区域*/
.main-content{
  margin-top: 30rpx;
  height: 80%;
  width: 80%;
  text-align: center;
background-color: rgb(255, 255, 255);
}
 .height{
  line-height: 500%;

 }
.near-hotel{
  height: 20%;
     border-bottom: 1px solid gainsboro;
   
 
}
.near-hotel text,.region text{
  padding-left: 30rpx;
}
.address{
  height: 20%;
     border-bottom: 1px solid gainsboro;

}
.time{
  height: 20%;
   border-bottom: 1px solid gainsboro;

}
.time text{
color: gray;
font-size: 25rpx;

  line-height: 100%;
  padding:5rpx;
}
.live-time{
  height: 20%;
  
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 20rpx;
   border-bottom: 1px solid gainsboro;
}

.live-time .reduce,.live-time .plus{
margin: auto 0;
  line-height: 100rpx;
  height: 100rpx;
  width:100rpx;
  border-radius: 100rpx;
    border: 1px solid black;
 
  
}

.middle{
  display: flex;
  flex-direction: column;
   justify-content: center;

}
.middle .middle-day,.middle .middle-night{
line-height: 150%;
  
}
.region{
    height: 20%;
  color: gray;
 
  line-height: 350%;
 
  
}
